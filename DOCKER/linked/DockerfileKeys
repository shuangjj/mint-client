# Pull base image.
FROM eris/base

ENV DOCKERFILES ./DOCKER/linked

# grab deps (gmp)
RUN apt-get update && \
  apt-get install -y --no-install-recommends \
    libgmp3-dev && \
  rm -rf /var/lib/apt/lists/*

# grab eris-keys
RUN go get github.com/shuangjj/eris-keys

# set user
USER $USER
WORKDIR /home/eris

CMD ["eris-keys", "server", "--host", "0.0.0.0"]

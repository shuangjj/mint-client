# Pull base image.
FROM eris/base

ENV DOCKERFILES ./DOCKER/linked

# grab tendermint
RUN mkdir -p $GOPATH/src/github.com/shuangjj/tendermint
RUN git clone https://github.com/shuangjj/tendermint $GOPATH/src/github.com/shuangjj/tendermint
WORKDIR $GOPATH/src/github.com/shuangjj/tendermint
RUN git checkout working
RUN go install ./cmd/tendermint
ENV TMROOT /home/eris/.eris/blockchains/tendermint
RUN mkdir -p $TMROOT
RUN chown -R $USER:$USER $TMROOT

# set user
USER $USER
WORKDIR /home/eris

CMD ["tendermint", "node"]
